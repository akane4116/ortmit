<div class="topic-index-wrapper">
    <div class="container">
      <% current_user.topics.each do |topic| %>
       <div class="row">
           <div class="col-md-6 col-md-offset-3">
               <div class="topic-index-single">
                   <h2 class="topic-author"></h2>
                   <% if topic.image.present? %>
                    <%= image_tag topic.image.url %>
                   <% end %>
                   <p class="topic-text">
                    <%= topic.description %>
                   </p>
               </div>
           </div>
       </div> 
      <% end %>
    </div>
</div>